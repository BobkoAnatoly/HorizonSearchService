@model Persistence.Models.SearchModel


<div class="main">
    <div class="container">
        <form class="form-body" asp-controller="Search" asp-action="Index" method="get">
            <div class="form-body__filters">
                <div class="sort-lang">
                    <p class="sort-lang__text">
                        Languages
                    </p>
                    <div class="sort-lang__results">
                        <input class="select__item" asp-for="l" type="submit" value="Phyton" />
                        <input class="select__item" asp-for="l" type="submit" value="JavaScript" />
                        <input class="select__item" asp-for="l" type="submit" value="Java" />
                        <input class="select__item" asp-for="l" type="submit" value="HTML" />
                        <input class="select__item" asp-for="l" type="submit" value="CSharp"/>
                    </div>
                </div>
            </div>
            <div class="form-body__main">
                <div class="form-body__search-util">
                    <div class="form-body__main-search">
                        <div class="search-bar">
                            <input class="serach-bar-text" asp-for="q" placeholder="Search anything" type="text" />
                            <button class="serach-bar-submit" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-body__results-sort">
                        <span class="select__header-text">Sort:</span>
                        <select asp-for="s" class="select__header">
                            <option class="select__item" >Наилучшее соответствие</option>
                            <option class="select__item">Больше всего звёзд</option>
                            <option class="select__item">Меньше всего звёзд</option>
                            <option class="select__item">Недавно обновлённые</option>
                            <option class="select__item">Давно обновлённые</option>
                        </select>
                    </div>
                </div>

                <div class="form-body__results-count">
                    <h3>
                        Найдено @{
                        } доступных репозиториев.
                    </h3>
                </div>

                <div class="form-body__results">

                    <div class="form-body__result">
                        <div class="form-body__result-ico">
                        </div>
                        <div class="form-body__result-body">
                            <a class="result-body__result-link"></a>
                            <p class="result-body__result-about"></p>
                            <div class="form-body__result-info">
                                <div class="result-info__stars">
                                </div>
                                <div class="result-info__lang">
                                </div>
                                <div class="result-info__update">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>